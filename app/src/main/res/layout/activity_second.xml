<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.haochuanxin.selectdorm.secondActivity">
    <RelativeLayout
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="20sp"
            android:text="您好！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_below="@id/text1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/text2"
                android:text="办理人               ："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit1"
                android:textColor="#7c7979"
                android:textSize="20sp"
                android:layout_alignBaseline="@id/text2"
                android:hint="请输入姓名"
                android:singleLine="true"
                android:layout_toRightOf="@id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/text2"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/text3"
                android:text="同住人1学号    ："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit2"
                android:textColor="#7c7979"
                android:textSize="20sp"
                android:layout_alignBaseline="@id/text3"
                android:hint="请输入学号"
                android:singleLine="true"
                android:layout_toRightOf="@id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/text3"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/text4"
                android:text="同住人1校验码："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit3"
                android:textColor="#7c7979"
                android:textSize="20sp"
                android:layout_alignBaseline="@id/text4"
                android:hint="请输入校验码"
                android:singleLine="true"
                android:layout_toRightOf="@id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/text4"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/text5"
                android:text="同住人2学号    ："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit4"
                android:textColor="#7c7979"
                android:textSize="20sp"
                android:layout_alignBaseline="@id/text5"
                android:hint="请输入学号"
                android:singleLine="true"
                android:layout_toRightOf="@id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/text5"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/text6"
                android:text="同住人2校验码："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit5"
                android:textColor="#7c7979"
                android:textSize="20sp"
                android:layout_alignBaseline="@id/text6"
                android:hint="请输入校验码"
                android:singleLine="true"
                android:layout_toRightOf="@id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/text6"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/text7"
                android:text="同住人3学号    ："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit6"
                android:textColor="#7c7979"
                android:textSize="20sp"
                android:layout_alignBaseline="@id/text7"
                android:hint="请输入学号"
                android:singleLine="true"
                android:layout_toRightOf="@id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/text7"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/text8"
                android:text="同住人3校验码："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit7"
                android:textColor="#7c7979"
                android:textSize="20sp"
                android:layout_alignBaseline="@id/text8"
                android:hint="请输入校验码"
                android:singleLine="true"
                android:layout_toRightOf="@id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/text8"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/text9"
                android:text="楼号                   ："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
